{
  "cSpell.words": [
    "gethostname",
    "harddisk",
    "homeassistant",
    "jsons",
    "levelname",
    "markdownlint",
    "mkdocs",
    "Mosquitto",
    "mountpoint",
    "mqtt",
    "mypy",
    "nics",
    "numpy",
    "paho",
    "percpu",
    "pernic",
    "psutil",
    "pyenv",
    "pypi",
    "userdata",
    "venv",
    "virtualenv"
  ],
  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit"
    }
  },
  "python.testing.pytestArgs": [
    "-v",
    "--color=yes"
  ],
  "python.analysis.typeCheckingMode": "basic"
}